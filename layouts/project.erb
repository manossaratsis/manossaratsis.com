<!DOCTYPE HTML>
<html lang="en">
  <head>
    <%=render '/partials/head.erb' %>
  </head>
  <body>
    <%=render '/partials/navbar.erb' %>
    <section class="banner" style="background-image: url(<%= asset_path(@item[:image]) %>)">
      <div class="banner-filter" />
    </section>
    <main>
      <div class="post">
        <h1><%= @item[:title] %></h1>
        <p class="description"><%= @item[:description] %></p>
        <hr>
        <aside>Created at <%= @item[:created_at] %></aside>
        <article>
          <%= yield %>
        </article>
      </div>
    </main>
    <%= render '/partials/footer.erb' %>
    <%= render '/partials/scripts.erb' %>
  </body>
</html>
